
      <%= render "users/user_sidebar" %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Dashboard</h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="col-lg-12">
              <div class="col-lg-4">
                <%= render "layouts/notice_card", :color=>"yellow", :icon=>"support", :count=>"#{@current_user.hits.count}", :comment=>"Referrals from other sites" %>
              </div>
              <div class="col-lg-4">
                <%= render "layouts/notice_card", :color=>"primary", :icon=>"tasks", :count=>"#{@current_user.hits.count}", :comment=>"Total visits" %>
              </div>
              <div class="col-lg-4">
                <%= render "layouts/notice_card", :color=>"green", :icon=>"send", :count=>"#{@urls.count}", :comment=>"Registered urls" %>
              </div>
            </div>

            <div class="row">
                <div class="col-lg-12">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Registered urls
                        </div>
                        <div class="panel-body">
                          <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                              <% if @urls && !@urls.empty? %>
                                  <thead>
                                    <tr>
                                      <th>S/N</th>
                                      <th>Url</th>
                                      <th>Shortened url</th>
                                      <th>Hits</th>
                                      <th>Date created</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% count = 1; @urls.each do |url| %>
                                      <tr class="odd gradeX">
                                          <td><%= count %></td>
                                          <td><%=link_to url.url, url.url %></td>
                                          <td><%=link_to "#{Rails.application.secrets.app_url}/#{url.shortened_path}", url_path(url) %></td>
                                          <td class="center"><%= url.hits.count %></td>
                                          <td class="center"><%= url.created_at.strftime("%a, %d %b %y") %></td>
                                      </tr>
                                    <% count += 1; end %>
                                  <% else %>
                                    <tr>
                                      You haven't yet registered any url
                                    </tr>
                                  <% end %>
                              </tbody>
                            </table>
                          </div><!-- datatable-->
                    </div>
                    <!-- /.panel -->
                    <%= render "layouts/new_url" if @urls.empty? %>

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->


    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>

        $('#dataTables-example').DataTable({
                responsive: true
        });

    $(document).ready(function() {
    });
    </script>
